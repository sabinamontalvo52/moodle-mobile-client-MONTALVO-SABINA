<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--  Permiso para notificaciones (Android 13+) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoodleMobileClient"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config">

        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Pantalla de Cursos -->
        <activity android:name=".ui.activities.CoursesActivity" />

        <!-- Pantalla de Detalle de Cursos -->
        <activity android:name=".ui.activities.CourseActivitiesActivity" />

        <!-- Pantalla de Foros del Curso -->
        <activity android:name=".ui.activities.CourseForumsActivity" />

        <!-- Pantalla de Discusiones de un Foro -->
        <activity android:name=".ui.activities.ForumDiscussionsActivity" />

        <!-- Pantalla para Agregar DiscusiÃ³n -->
        <activity android:name=".ui.activities.AddDiscussionActivity" />

        <activity android:name=".ui.activities.DiscussionPostsActivity" />

        <activity android:name=".ui.activities.ReplyPostActivity" />



        <!-- Pantalla de Actividades -->
        <activity
            android:name=".ui.activities.AssignmentActivity"
            android:exported="false" />

        <activity
            android:name=".ui.activities.SubmitAssignmentActivity"
            android:exported="false" />

        <!-- Actividad Principal -->
        <activity
            android:name=".ui.activities.WelcomeActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>
